<UserControl
    x:Class="PiPic1.Controls.InfoBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiUnoAppBlankUWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid BorderBrush="White" BorderThickness="6" CornerRadius="12" Padding="12">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="InfoBox" FontSize="36" FontFamily="Cambria"></TextBlock>
            <TextBlock x:Name="TotalPicsinDB"  Text="{x:Bind IM.TotalPicsinDB}" FontSize="20" FontFamily="Segoe UI"></TextBlock>
            <TextBlock x:Name="ViewedPics" Text="{x:Bind TotalPicsinDB}" FontSize="20" FontFamily="Segoe UI"></TextBlock>
            <TextBlock x:Name="NonViewedPics"  Text="{x:Bind t1}" FontSize="20" FontFamily="Segoe UI"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
